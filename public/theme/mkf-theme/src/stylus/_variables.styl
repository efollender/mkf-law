@import url('https://fonts.googleapis.com/css?family=Droid+Serif:400,700')
@import url('https://fonts.googleapis.com/css?family=Noto+Sans:400,700,700italic')
//S-GRID SETTINGS
base-font-size = 16            // base font size it is 16px by default it is used to calculate rem sizes
gutter = 20px                  // gutters size
columns = 12                   // how many columns you need in your grid (usage with helper classes)

breakpoints = {                // media queries breakpoints
    sm: 0,
    md: 640px,
    lg: 1200px,
    xlg: 1440px,
    xxlg: 1920px
}

sans-font = 'Noto Sans', sans-serif
serif-font = 'Droid Serif', 'Times New Roman', serif

//COLORS
dk-grey = #2B3A42
md-grey = #3f5765
lt-grey = #bdd4de
white = #efefef
highlight = #ff530d

